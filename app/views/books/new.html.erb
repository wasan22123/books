<%= stylesheet_link_tag 'new', :media => "all" %>

<h1>新規投稿</h1>

<%= form_for @book do |f| %>
    <div class="field">
    <%= f.label :タイトル %>
    <%= f.text_field :title, :size => 140 %>
    </div>
    
    <div class="field">
    <%= f.label :作者 %>
    <%= f.text_field :author, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :値段 %>
    <%= f.text_field :price, :size => 140 %>
    </div>

    <div class="field">
    <%= f.label :写真 %>
    <%= f.file_field :image %>
    </div>

    <div class="field">
    <%= f.label :詳細 %>
    <%= f.text_field :body, :size => 140 %>
    </div>

    <div class='form-group'>
        <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class='form-check'>
                <%= tag.label class: 'form-check-label' do %>
                    <%= tag.check_box class: 'form-check-input' %>
                    <%= tag.text %>
                <% end %>
            </div>
        <% end %>
    </div>

    <div><%= f.submit "投稿する" %></div>
<% end %>
<%= link_to "投稿一覧に戻る", books_path,class:"nav-link" %>
